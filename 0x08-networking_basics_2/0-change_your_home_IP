#!/usr/bin/env bash
# This script changes the IP address mappings for localhost and facebook.com

# Update /etc/hosts file to change IP mappings
sudo sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts
sudo sed -i 's/8.8.8.8/facebook.com/g' /etc/hosts

# Flush DNS cache to apply changes immediately
sudo systemctl restart systemd-resolved

